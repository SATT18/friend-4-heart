<div class="patient-wrapper">
  <div class="container">
      <div class="row">
    <a href="/patients/new" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
    <ul class="collection">
      {{#each patients}}
      <li class="collection-item avatar">
        <i class="material-icons circle green">assignment_ind</i>
        <span class="title">{{name}}</span>
        <a href="/patient/{{id}}" class="secondary-content waves-effect waves-light btn-small">Перейти к пациенту</a>
      </li>
      {{/each}}
    </ul>
  </div>
  </div>
</div>
