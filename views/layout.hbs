<!DOCTYPE html>
<html>

<head>
  <title>Friends 4 heart</title>
  <link rel="shortcut icon" href="images/titleIcon.ico" />
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <script defer src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script defer src="/javascripts/main.js"></script>
  <script defer src="/javascripts/auth.js"></script>
</head>

<body>
  <nav>
    <div class="nav-wrapper">
      <div class="container">
        <a href="#" class="brand-logo">Logo</a>
        <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          {{#if auth}}
          <li><a href="#">{{user.name}}</a></li>
          <li><a href="/logout">Logout</a></li>
          {{else}}
          <li><a class="waves-effect modal-trigger" href="#singIn">Sing in</a></li>
          <li><a class="waves-effect modal-trigger" href="#singOut">Sing up</a></li>
          {{/if}}
          <li><a href="/">Home</a></li>
        </ul>
      </div>
    </div>
  </nav>
  <ul id="mobile-demo" class="sidenav">
    {{#if auth}}
    <li><a href="#">{{user.name}}</a></li>
    <li><a href="/logout">Logout</a></li>
    {{else}}
    <li><a class="waves-effect modal-trigger" href="#singIn">Sing in</a></li>
    <li><a class="waves-effect modal-trigger" href="#singOut">Sing up</a></li>
    {{/if}}
    <li><a href="/">Home</a></li>
  </ul>

  {{!-- Modal forms --}}
  <div id="singIn" class="modal">
    <div class="modal-content">
      <div class="row">
        <div class="col s12">
          <form action="/login" method="POST" name="loginForm">

            <div class="row">
              <div class="input-field s12">
                <i class="material-icons prefix">mail</i>
                <input placeholder="Ivan" id="email" type="email" name="email" class="validate">
                <label for="email">Email</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field s12">
                <i class="material-icons prefix">lock</i>
                <input id="passwordIn" type="password" name="password" class="validate">
                <label for="passwordIn">Password</label>
              </div>
            </div>

            <div class="row">
              <div class="col s12 center">
                <button class="btn waves-effect waves-light" type="submit" name="action">Sing in
                  <i class="material-icons right">send</i>
                </button>
              </div>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>

  <div id="singOut" class="modal">
    <div class="modal-content">
      <div class="row">
        <div class="col s12">
          <form action="/reg" method="POST" name="regForm">
            <div class="row">
              <div class="input-field s12">
                <i class="material-icons prefix">account_circle</i>
                <input placeholder="Ivan" id="username" type="text" name="username" class="validate">
                <label for="username">Username</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field s12">
                <i class="material-icons prefix">mail</i>
                <input placeholder="Ivan" id="email" type="email" name="email" class="validate">
                <label for="email">Email</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field s12">
                <i class="material-icons prefix">lock</i>
                <input id="password" type="password" name="password" class="validate">
                <label for="password">Password</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field s12">
                <i class="material-icons prefix">repeat</i>
                <input id="passwordRep" type="password" name="passwordRep" class="validate">
                <label for="passwordRep">Repeat password</label>
              </div>
            </div>

            <div class="row">
              <div class="col s12 center">
                <button class="btn waves-effect waves-light" type="submit" name="action">Sing in
                  <i class="material-icons right">send</i>
                </button>
              </div>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>

  {{!-- Main info --}}
  {{{body}}}
  <div class="empty-space"></div>

  {{!-- Footer --}}
  <footer class="page-footer">
    <div class="footer-copyright">
      <div class="container">
        Â© 2020
      </div>
    </div>
  </footer>

</body>

</html>
